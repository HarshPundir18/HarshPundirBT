{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMaps": false,
            "webRoot": "${workspaceRoot}/app/js"
        },
        {
            "name": "Launch FF against localhost, with sourcemaps",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/app/js"
        }
    ]
}